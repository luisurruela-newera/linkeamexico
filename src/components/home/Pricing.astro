---

<section id="pricing" class="py-3">
  <h2 class="my-10 text-2xl md:text-3xl lg:text-4xl font-bold text-center">
    Precios y Paquetes
  </h2>
  <div
    class="container px-2 mx-auto grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-3 text-white"
  >
    {
      products.map((product) => (
        <div class="bg-black/90 w-full min-h-[300px] rounded-4xl shadow-lg p-10">
          <h3 class="text-3xl font-bold">{product.title}</h3>
          <p class="mt-3">{product.description}</p>
          <div class="real-price mt-5 line-through">{product.price}</div>
          <div class="final-price text-lime-400 font-bold text-2xl mt-5">
            {product.finalPrice}
            <span class="text-base text-white font-normal">+IVA</span>
          </div>
          <ul class="mt-8 text-white">
            {product.features.map((feature) => (
              <li class="flex gap-1">
                <Icon name="pixelarticons:check" size={24} />
                <span>{feature}</span>
              </li>
            ))}
          </ul>
          <a
            href={product.link}
            class="w-full mt-8 bg-purple-600 hover:bg-purple-800 transition duration-300 text-white font-bold py-2 px-4 rounded block text-center"

          >
            Comprar ahora
          </a>
          <div class="mt-5">
            <a href="#contact">o agenda una llamada</a>

          </div>
        </div>
      ))
    }
  </div>
</section>
